<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <title>Quote Generator</title>
    <!-- Add jsPDF library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.29/jspdf.plugin.autotable.min.js"></script>
    <!-- Add our custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <img 
        id="companyLogo" 
        alt="Company Logo" 
        style="height: 150px;" 
        src="images/company_logo.png"/>
    <h1>Quote Generator</h1>
    <form id="invoiceForm">
        <div class="form-group">
            <label for="customerName">Customer Name</label>
            <input type="text" id="customerName" name="customerName" class="form-control" required autocomplete="name">
        </div>

        <div class="form-group">
            <label for="customerAddress">Address</label>
            <input type="text" id="customerAddress" name="customerAddress" class="form-control" required autocomplete="street-address">
        </div>

        <div class="form-group">
            <label for="customerEmail">Email Address</label>
            <input type="email" id="customerEmail" name="customerEmail" class="form-control" required autocomplete="email">
        </div>

        <div class="form-group">
            <label for="customerPhone">Phone Number</label>
            <input type="tel" id="customerPhone" name="customerPhone" class="form-control" required autocomplete="tel">
        </div>

        <h3>Items:</h3>
        <div class="form-group">
            <div id="itemsContainer" class="items-container">
                <!-- Components will be loaded here -->
            </div>
        </div>

        <button type="button" id="addItemBtn">Add Item</button>
        <button type="submit" id="generateInvoiceBtn">Generate Invoice</button>
    </form>

    <!-- Load component templates -->
    <template id="itemSelectorTemplate">
        <div class="item">
            <div class="form-group">
                <label for="item-dropdown-PLACEHOLDER">Item</label>
                <select id="item-dropdown-PLACEHOLDER" class="form-control" required>
                    <option value="" disabled selected>Select item</option>
                </select>
            </div>
            <div class="description-group" style="display: none;">
                <p class="item-description"></p>
            </div>
            <div class="form-group">
                <label class="size-label" for="size-dropdown-PLACEHOLDER">Size</label>
                <select id="size-dropdown-PLACEHOLDER" class="form-control" required>
                    <option value="" disabled selected>Select size</option>
                </select>
            </div>
            <div class="form-group">
                <label class="option-label" for="option-dropdown-PLACEHOLDER">Option</label>
                <select id="option-dropdown-PLACEHOLDER" class="form-control" required>
                    <option value="" disabled selected>Select option</option>
                </select>
            </div>
            <div class="form-group quantity-group hidden">
                <label for="quantity-PLACEHOLDER">Quantity</label>
                <input type="number" id="quantity-PLACEHOLDER" class="form-control" min="1" required>
            </div>
            <div class="form-group">
                <p id="price" style="display: none;">Price: R0.00</p>
            </div>
        </div>
    </template>

    <!-- Add our custom JavaScript -->
    <script type="module" src="/js/script.js"></script>
</body>
</html>