    "@types/node": "^20.11.19",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.35",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
